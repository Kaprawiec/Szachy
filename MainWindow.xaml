<Window x:Class="szachy_menu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="550" Width="825" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Grid.Row="0" Grid.RowSpan="5" Grid.Column="0" Grid.ColumnSpan="4" Source="images/szachy_theme.jpg"/>
        <Button Grid.Column="1" Grid.Row="2" Height="40" Margin="5" VerticalAlignment="Bottom" FontStyle="Oblique" FontWeight="Bold" FontSize="18" Content="Gracz vs Komputer" Click="Button_Click_1"/>
        <Button Grid.Column="2" Grid.Row="2" Height="40" Margin="5" VerticalAlignment="Bottom" FontStyle="Oblique" FontWeight="Bold" FontSize="18" Content="Gracz vs Gracz" Click="Button_Click"/>
        <Button Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="3" HorizontalAlignment="Center" Margin="5" Height="40" Width="180" FontStyle="Oblique" FontWeight="Bold" FontSize="18" VerticalAlignment="Top" Content="Lista wyników"/>
    </Grid>
</Window>
